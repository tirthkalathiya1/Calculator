<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white">
    <LinearLayout
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/txt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|end"
    android:textSize="50dp"
    android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="AC"
            android:id="@+id/Ac"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#DC0909">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="D"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#DC0909"
            android:id="@+id/delet">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="%"
            android:id="@+id/qq"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#DC0909">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="÷"
            android:id="@+id/division"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#DC0909">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/seven"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/eight"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/Nine"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="×"
            android:id="@+id/multi"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#DC0909">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/four"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/five"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/six"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/pluse"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#DC0909">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/one"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/two"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DC0909"
            android:text="3"
            android:id="@+id/thre"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold">

        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="−"
            android:textSize="30dp"
            android:id="@+id/minus"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#DC0909">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/zero"
            android:textColor="@color/white"
            android:background="#DC0909">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00"
             android:id="@+id/zero2"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#DC0909">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DC0909"
            android:text="."
            android:id="@+id/point"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DC0909"
            android:text="="
            android:id="@+id/sum"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>

</LinearLayout>